@model EventInsertVM


@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<form class="form" method="post" enctype="multipart/form-data">

    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <label class="upload">
                        <img class="img-thumbnail" src="~/Images/no-image-icon-23499.png">
                        @Html.TextBoxFor(e => e.Photo, new
                        {
                       type = "file",
                            accept = "image/jpeg, image/png",
                       hidden = ""
                        })
                    </label>           
                </div>
            </div>

            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Add Event</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label>@Html.TextBoxFor(e => e.name, new { maxlength = 20, autofocus = "", @class = "form-control", placeholder = "Name" })</div>
                        <div class="col-md-6"><label class="labels">Price</label>@Html.TextBoxFor(e => e.price, new { type = "number", @class = "form-control", placeholder = "price", min = "0" })</div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Description</label>@Html.TextAreaFor(e => e.des, new {
                                                                                       style = "width: 400px; height: 200px; resize: none", @class="form-control", autofocus= "", placeholder ="Description"})</div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-6"><label class="labels">Availability</label>@Html.TextBoxFor(e => e.availability, new { type = "number", @class = "form-control", placeholder = "Availability", min="0" })</div>
                        <div class="col-md-6"><label class="labels">Participants</label>@Html.TextBoxFor(e => e.participants, new { type = "number", @class = "form-control", placeholder = "participants", min = "0" })</div>
                        <div class="col-md-6"><label class="labels">Start Date</label>@Html.TextBoxFor(e => e.startDate, new { type = "date", @class = "form-control", placeholder = "", min = "0" })</div>
                        <div class="col-md-6"><label class="labels">End Date</label>@Html.TextBoxFor(e => e.endDate, new { type = "date", @class = "form-control", placeholder = "", min = "0" })</div>
                        <div class="col-md-6"><label class="labels">Start Time</label>@Html.TextBoxFor(e => e.startTime, new { type = "time", @class = "form-control", placeholder = "", min = "0" })</div>
                        <div class="col-md-6"><label class="labels">End Time</label>@Html.TextBoxFor(e => e.endTime, new { type = "time", @class = "form-control", placeholder = "", min = "0" })</div>
                        <div class="col-md-12"><label class="labels">Organized By</label>@Html.TextBoxFor(e => e.organized_by, new { maxlength = 20, autofocus = "", @class = "form-control", placeholder = "Organizer Name" })</div>
                    </div>
                    <div class="mt-5 text-center"><section><button class="btn btn-primary profile-button">Add Event</button></section></div>
                </div>
            </div>
            @*  <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><span>Edit Experience</span><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;Experience</span></div><br>
                <div class="col-md-12"><label class="labels">Experience in Designing</label><input type="text" class="form-control" placeholder="experience" value=""></div> <br>
                <div class="col-md-12"><label class="labels">Additional Details</label><input type="text" class="form-control" placeholder="additional details" value=""></div>
            </div>
        </div>*@
        </div>
    </div>
</form>

<style>
    .form-control:focus {
        box-shadow: none;
        border-color: #BA68C8
    }

    .profile-button {
        background: rgb(99, 39, 120);
        box-shadow: none;
        border: none
    }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

    .back:hover {
        color: #682773;
        cursor: pointer
    }

    .labels {
        font-size: 11px
    }

    .add-experience:hover {
        background: #BA68C8;
        color: #fff;
        cursor: pointer;
        border: solid 1px #BA68C8
    }

    .upload {
        display: block;
    }

        .upload img {
            display: block;
            border: solid 1px #333;
            width: 200px;
            height: 200px;
            object-fit: cover;
        }
    textarea {
        resize: none;
    }
</style>

@section foot{

<script>

    function validatePhoto(f) {
        let retype = /^image\/(jpeg|png)$/i;
        let reName = /^.+\.(png|jpg|jpeg)$/i;
        return f &&
            f.size <= 1 * 1024 * 1024 &&
            retype.test(f.type) &&
            reName.test(f.name);
    }

    let src = null;
    $('.upload input').change(e => {
        let f = e.target.files[0];
        let img = $(e.target).siblings('img')[0];

        if (!src) src = img.src;

        if (validatePhoto(f)) {

            img.src = URL.createObjectURL(f);

        } else {
            img.src = src;
            e.target.value = '';
        }

    });

</script>
}

